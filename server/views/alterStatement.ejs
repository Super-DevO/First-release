<%- include partials/header.ejs %>

<div class="container">
    <div class="jumbotron">
        <h1><%= title %></h1>
        <h3>Hi, you have chosen to alter a question.  Fill in the box, press the button and thy will be done.</h3>
    </div>

    <br><hr>
    <h2><%= locSurv.question %></h2>
    <hr>
    <div class="row">
        <div class="offset-md-3 col-md-6">
          <form class="form" method="POST">
          <div class="input-group mb-3">
            <div class="form-group">
                <label for="nameTextField">Please Print Clearly</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter New Question"
                name="NewQuest" required>
            </div><br>


            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Alter</button>
            
                <a href="/edit/<%= locSurv._id %>" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Back</a>
            </form>
        </div>
        </div>
    </div>
</div>
