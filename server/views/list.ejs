<%- include partials/header.ejs %>

<%- include partials/main_nav.ejs %>

<br>
<main class="container">
<div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
  <div class="col-md-6 px-0">
    <h1 class="display-4 font-italic">Surveys List</h1>
    <p class="lead my-3">This is what is on the menu today.  Feel free to provide you opinions for any of them.</p>
    <p class="lead mb-0"><a href="#" class="text-white font-weight-bold">Remember that the list is updated everytime someone adds to it.  So check back later!</a></p>
  </div>
</div>

<% for (let count = 0; count < surveys.length; count++) { %>
  <div class="row mb-2">
      <div class="col-md-6">
        <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
          <div class="col p-4 d-flex flex-column position-static">
            <strong class="d-inline-block mb-2 text-primary"> Genera </strong>
            <h3 class="mb-0"><%= surveys[count].Name %></h3>
            <div class="mb-1 text-muted"><%= surveys[count].Author %></div>
            <p class="card-text mb-auto"><%= surveys[count].Description %></p>
            <br>
            <div class="btn-group" style="width:50%">

              <a  href="/slanding/<%= surveys[count]._id %>" class="btn btn-sm btn-outline-secondary" type="button">Participate
              </a>
 
            </div>
            
            </div>
            <% count++; %>

            <% if(surveys[count] != null) { %>
          <div class="col-auto d-none d-lg-block">
            <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
          <div class="col p-4 d-flex flex-column position-static">
            <strong class="d-inline-block mb-2 text-success">Genera</strong>
            <h3 class="mb-0"><%= surveys[count].Name %></h3>
            <div class="mb-1 text-muted"><%= surveys[count].Author %></div>
            <p class="mb-auto"><%= surveys[count].Description %></p>
            <br>
            <% if(surveys[count].Type == 1) { %>
              <div class="btn-group" style="width:50%">
                <a type="button" href="/slanding/<%= surveys[count]._id %>" class="btn btn-sm btn-outline-secondary">Participate</a>
              </div>
            <% } else if(surveys[count].Type == 2) { %>
              <div class="btn-group" style="width:50%">
                <a type="button" href="/slanding2/<%= surveys[count]._id %>" class="btn btn-sm btn-outline-secondary">Participate</a>
              </div>
              <% } else if(surveys[count].Type == 3) { %>
                <div class="btn-group" style="width:50%">
                  <a type="button" href="/slanding3/<%= surveys[count]._id %>" class="btn btn-sm btn-outline-secondary">Participate</a>
                </div>
              <% } %>
              </div>
          <div class="col-auto d-none d-lg-block">
            <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% } %>
  <% } %>

</main>
<br><br><br><br><br>


